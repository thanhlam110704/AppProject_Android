<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginEnd="10dp"
    android:id="@+id/layout_truyendecu"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/comic_avatar_img_home"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="fitXY"
            android:src="@drawable/hinh_conantruyen"/>
        <TextView
            android:id="@+id/comic_name_txt_home"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:background="#A8000000"
            android:gravity="center"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="Truyen tranh"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="TextSizeCheck" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/chapter_name_txt_home"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:background="#A8000000"
                android:textSize="12sp"
                android:padding="6dp"
                android:textColor="@color/white"
                android:text="Chapter"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/chapter_dateupdate_txt_home"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:background="#A8000000"
                android:text="11/11/2004"
                android:textStyle="italic"
                android:padding="6dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="12sp"/>


        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>