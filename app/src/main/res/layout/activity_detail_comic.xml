<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".user.DetailComicActivity">
<RelativeLayout
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:id="@+id/comic_name_txt_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Võ Luyện Đỉnh Phong"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center">
    </TextView>
    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/comic_avatar_img_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/comic_book"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:scaleType="fitXY"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:layout_marginLeft="150dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tác giả "
                android:textSize="17sp"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/icon_user2"
                android:layout_marginRight="10dp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/comic_author_txt_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tác giả"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tình trạng:"
                android:drawableLeft="@drawable/icon_status"
                android:textSize="17sp"
                android:drawablePadding="5dp"
                android:layout_marginRight="5dp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/comic_status_txt_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tình trạng"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thể loại:"
                android:drawableLeft="@drawable/icon_cate"
                android:drawablePadding="5dp"
                android:textSize="17sp"
                android:layout_marginRight="5dp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/comic_genres_txt_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Shounen, Action,"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày xuất bản:"
                android:drawableLeft="@drawable/icon_date"
                android:textSize="17sp"
                android:drawablePadding="5dp"
                android:layout_marginRight="5dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/comic_dateupdate_txt_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="11/11/2004"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lượt xem: "
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/icon_view"
                android:textSize="17sp"
                android:layout_marginRight="5dp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/comic_view_txt_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="111.1111"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="@color/purple"
            app:cardElevation="0dp"
            app:cardUseCompatPadding="true">
        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:text="Theo dõi" />
    </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="200dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="199dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="Mô tả :"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/comic_description_txt_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Mô tả"
                android:paddingLeft="10dp"
                android:textColor="@color/black"
                android:textSize="17sp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="400dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Danh sách chương:"
            android:textSize="20sp"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:textColor="@color/black" />


               <ListView
                   android:layout_marginTop="10dp"
                   android:id="@+id/lvchapter"
                   android:layout_width="match_parent"
                   android:layout_height="500dp"
                   android:nestedScrollingEnabled="true">
               </ListView>

    </LinearLayout>
</RelativeLayout>
</ScrollView>